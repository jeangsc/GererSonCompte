<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_text_date_rlo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.example.jean.gerersoncompte.EditTextErrorChecker
        android:id="@+id/edit_text_date_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="date"
        android:singleLine="true"
        android:text="__/__/____"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        app:filter="filterDateExists"
        app:textError="Date inexistante!"/>

    <ImageButton
        android:id="@+id/edit_text_date_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/edit_text_date_edit"
        android:layout_alignTop="@+id/edit_text_date_edit"
        android:background="@drawable/calendar" />

</RelativeLayout>
